{
    "name": "unlingo",
    "private": true,
    "type": "module",
    "workspaces": {
        "packages": [
            "apps/*",
            "packages/*"
        ],
        "catalog": {
            "@tailwindcss/vite": "^4.1.8",
            "@tanstack/react-router": "1.134.4",
            "@tanstack/react-start": "1.134.6",
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "tailwindcss": "^4.1.3",
            "tailwind-merge": "^3.3.1",
            "vite-tsconfig-paths": "^5.1.4",
            "convex": "^1.27.0",
            "@tanstack/react-router-devtools": "1.134.4",
            "@types/react": "~19.1.10",
            "@types/react-dom": "^19.0.4",
            "@vitejs/plugin-react": "^5.0.4",
            "typescript": "^5.7.2",
            "vite": "^7.0.2",
            "@types/node": "^24.10.0"
        }
    },
    "scripts": {
        "dev": "bun run --filter '*' dev",
        "build": "bun run --filter '*' build",
        "check-types": "bun run --filter '*' check-types",
        "dev:native": "bun run --filter native dev",
        "dev:web": "bun run --filter web dev",
        "dev:server": "bun run --filter @unlingo/backend dev",
        "dev:setup": "bun run --filter @unlingo/backend dev:setup"
    },
    "packageManager": "bun@1.3.2"
}
