{
    "$schema": "https://mintlify.com/schema.json",
    "name": "Unlingo",
    "logo": {
        "dark": "/assets/logo.png",
        "light": "/assets/logo.png"
    },
    "favicon": "favicon.ico",
    "colors": {
        "primary": "#ffffff",
        "light": "#f3f4f6",
        "dark": "#1f2937",
        "anchors": {
            "from": "#ffffff",
            "to": "#9ca3af"
        }
    },
    "topbarLinks": [
        {
            "name": "Dashboard",
            "url": "https://unlingo.com/dashboard"
        }
    ],
    "topbarCtaButton": {
        "name": "Get Started",
        "url": "https://unlingo.com/sign-up"
    },
    "navigation": [
        {
            "group": "Get Started",
            "pages": ["introduction", "quickstart"]
        },
        {
            "group": "Core Concepts",
            "pages": [
                "concepts/projects",
                "concepts/namespaces",
                "concepts/versions",
                "concepts/translations",
                "concepts/releases",
                "concepts/screenshots"
            ]
        },
        {
            "group": "Features",
            "pages": [
                "features/workspaces",
                "features/languages",
                "features/builds",
                "features/glossary",
                "features/screenshots",
                "features/ai-translation",
                "features/ab-testing",
                "features/billing"
            ]
        },
        {
            "group": "Integrations",
            "pages": ["integrations/i18next", "integrations/next-intl"]
        },
        {
            "group": "API Reference",
            "pages": [
                "api-reference/overview",
                "api-reference/translations/get-translations",
                "api-reference/health",
                "api-reference/errors"
            ]
        }
    ],
    "footerSocials": {
        "x": "https://x.com/twendykirn",
        "discord": "https://discord.gg/TdDYte7KjG",
        "github": "https://github.com/twendykirn/unlingo"
    },
    "feedback": {
        "thumbsRating": true,
        "suggestEdit": true,
        "raiseIssue": true
    }
}
